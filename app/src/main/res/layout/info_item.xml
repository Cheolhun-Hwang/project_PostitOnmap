<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/info_recycleview_image"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginStart="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/noimage"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/info_recycleview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/info_recycleview_image"
            android:layout_marginStart="24dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/info_recycleview_image"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_recycleview_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/info_recycleview_modify"
            android:layout_alignStart="@+id/info_recycleview_title"
            android:layout_marginBottom="16dp"
            android:text="주소"
            android:textColor="@color/grey_600"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/info_recycleview_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/info_recycleview_image"
            android:layout_alignStart="@+id/info_recycleview_addr"
            android:layout_marginBottom="14dp"
            android:text="최근 수정날짜"
            android:textColor="@color/grey_600"
            android:textSize="8dp" />
    </RelativeLayout>

</LinearLayout>